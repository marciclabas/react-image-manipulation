{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      // "use-cropper/animation": ["/home/m4rs/github/ui/react-image-manipulation/use-cropper/src/animation"],
      // "use-cropper": ["/home/m4rs/github/ui/react-image-manipulation/use-cropper/src"],
      // "use-grid-selector/worker": ["/home/m4rs/github/ui/react-image-manipulation/use-grid-selector/src/worker"],
      // "use-grid-selector": ["/home/m4rs/github/ui/react-image-manipulation/use-grid-selector/src"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
